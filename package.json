{
  "name": "@penseapp/uselocalstorage",
  "version": "1.0.0",
  "description": "A react hooks to use useState with localStorage persist",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "FORCE_COLOR=true eslint ./src/**/*.{ts,tsx} --max-warnings=0 --format=codeframe",
    "prettier": "FORCE_COLOR=true prettier --write './src/**/*.{jsx,tsx,ts,js,md}' && prettier --write './README.md'",
    "build": "rollup -c",
    "build-watch": "rollup -c -w",
    "start-playground": "cd playground && npm run start",
    "i-all": "npm i && cd playground && npm i",
    "dev": "npm-run-all --parallel build-watch start-playground"
  },
  "keywords": [
    "react",
    "hooks",
    "localStorage",
    "useState"
  ],
  "author": "@joaomantovani",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/expired-storage": "^1.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/styled-components": "^5.1.7",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.40.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.2.2",
    "eslint": "^7.15.0",
    "husky": "^4.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "expired-storage": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
